{
	"name": "uoc-boilerplate",
	"version": "2.3.0",
	"private": true,
	"description": "Boilerplate for Advanced HTML/CSS Tools UOC students",
	"scripts": {
		"stylelint": "stylelint src/**/*.scss",
		"parcel:dev": "parcel src/index.html -p 8123 --open",
		"parcel:build": "parcel build src/index.html --public-url ./ --out-dir dist --no-source-maps --no-cache",
		"clean": "rimraf dist .cache .cache-loader",
		"dev": "npm-run-all clean parcel:dev",
		"build": "npm-run-all clean stylelint parcel:build",
		"test": "echo 'Everything is working as expected âœ…\nStart working on your project by running \\033[1mnpm run dev\\033[0m'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/uoc-advanced-html-css/uoc-boilerplate.git"
	},
	"author": {
		"name": "Jordi Tarrida",
		"email": "jorditarrida@uoc.edu"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/uoc-advanced-html-css/uoc-boilerplate/issues"
	},
	"homepage": "https://github.com/uoc-advanced-html-css/uoc-boilerplate#readme",
	"devDependencies": {
		"@babel/cli": "^7.6.0",
		"@babel/core": "^7.6.0",
		"@babel/preset-env": "^7.6.0",
		"npm-run-all": "^4.1.5",
		"parcel-bundler": "^1.12.4",
		"parcel-plugin-purgecss": "^2.1.3",
		"postcss-clean": "^1.1.0",
		"postcss-loader": "^3.0.0",
		"postcss-preset-env": "^6.7.0",
		"rimraf": "^2.7.1",
		"sass": "^1.23.7",
		"sass-loader": "^8.0.0",
		"stylelint": "^11.1.1",
		"stylelint-config-standard": "^19.0.0",
		"stylelint-scss": "^3.12.0",
		"tailwindcss": "^1.1.4"
	},
	"dependencies": {
		"@fortawesome/fontawesome-free": "^5.12.0",
		"postcss-import": "^12.0.1",
		"stylelint-selector-bem-pattern": "^2.1.0",
		"svgo": "1.3.0"
	}
}
